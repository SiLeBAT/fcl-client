                    {
                        "allowTemplateLiterals": true
                    }
                ],
                "no-unused-expressions": "off",
                "semi": "off",
                "rxjs/no-ignored-takewhile-value": "off",
                "rxjs/no-implicit-any-catch": "off",
                "rxjs/no-subject-value": "error"
            }
        }
    ]
}
