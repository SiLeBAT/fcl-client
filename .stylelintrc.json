{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": 4,
        "selector-type-no-unknown": [
            true,
            {
                "ignoreTypes": [
                    "router-outlet",
                    "ngx-datatable",
                    "/^datatable./",
                    "/^mat-./",
                    "fcl-schema-graph",
                    "fcl-gis-graph",
                    "fcl-table",
                    "color-picker"
                ]
            }
        ],
        "selector-pseudo-element-no-unknown": [
            true,
            {
                "ignorePseudoElements": [
                    "ng-deep"
                ]
            }
        ],
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "mixin",
                    "include",
                    "extend"
                ]
            }
        ],
        "color-hex-length": "long"
    }
}
