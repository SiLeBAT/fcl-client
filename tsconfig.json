{
    "compileOnSave": false,
    "compilerOptions": {
        "downlevelIteration": true,
        "importHelpers": true,
        "outDir": "./dist/out-tsc",
        "baseUrl": "src",
        "paths": {
            "@app/*": ["app/*"],
            "@env/*": ["environments/*"]
        },
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

        // the following compiler flag are planned to be set
        // "alwaysStrict": true,
        // "noImplicitAny": true,
        // "noImplicitThis": true,
        // "strictNullChecks": true,
        // "strictBindCallApply": true,
        // "strictFunctionTypes": true,
        // "strictPropertyInitialization": true,
        // "strict": true

        // "noImplicitReturns": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,

        "target": "es2015",
        "typeRoots": [
            "node_modules/@types",
            "src/typings.d.ts"
        ],
        "lib": ["es2019", "dom"],
        "module": "es2020"
    },
    "exclude": [
        "**/*.spec.ts"
    ]
}
